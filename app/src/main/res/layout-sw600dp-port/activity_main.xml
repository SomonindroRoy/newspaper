<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404E5A"
    tools:context=".MainActivity"
    android:padding="10dp">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="3"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="30dp"
                >

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/zilaVittik"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zilavittik"
                    />

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/jatiyo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jatiyo"
                    />

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/english"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/english"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="3"
                android:layout_marginBottom="40dp"
                >

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/international"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/international"
                    />

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/khela"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/khela"
                    />

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/chakri"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chakri"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="3"
                >

                <ImageView
                    android:layout_weight="1.5"
                    android:id="@+id/sikkha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sikkha"
                    />

                <ImageView
                    android:layout_weight="1.5"
                    android:id="@+id/binodon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/binodon"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="49.5dp"
                android:background="#707070"
                android:layout_marginBottom="29.5dp"
                />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="লাইভ টিভিঃ"
                android:textStyle="bold"
                android:textColor="#A6BCD0"
                android:textSize="40sp"
                android:textAlignment="center"
                android:layout_marginBottom="59dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="2"
                >

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/liveTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/live_news"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="49.5dp"
                android:background="#707070"
                android:layout_marginBottom="29.5dp"
                />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="রেডিওঃ"
                android:textStyle="bold"
                android:textColor="#A6BCD0"
                android:textSize="40sp"
                android:textAlignment="center"
                android:layout_marginBottom="59dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="3"
                android:layout_marginBottom="40dp"
                >

                <ImageView
                    android:layout_weight="1.5"
                    android:id="@+id/liveRadio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/live_radio"
                    />

                <ImageView
                    android:layout_weight="1.5"
                    android:id="@+id/islamic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/islamic_radio"
                    android:contentDescription="TODO" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>